<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>NinaRow.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameListServlet</servlet-name>
        <servlet-class>NinaRow.servlets.GamesListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>NinaRow.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayerResignServlet</servlet-name>
        <servlet-class>NinaRow.servlets.PlayerResignServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayMoveServlet</servlet-name>
        <servlet-class>NinaRow.servlets.PlayMoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterToGameServlet</servlet-name>
        <servlet-class>NinaRow.servlets.RegisterToGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadGameServlet</servlet-name>
        <servlet-class>NinaRow.servlets.UploadGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>NinaRow.servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovesListServlet</servlet-name>
        <servlet-class>NinaRow.servlets.MovesListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GameStatusServlet</servlet-name>
        <servlet-class>NinaRow.servlets.GameStatusServlet</servlet-class>
    </servlet>

    <!-- ================================================ -->

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameListServlet</servlet-name>
        <url-pattern>/gamesList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerResignServlet</servlet-name>
        <url-pattern>/game/playerResign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayMoveServlet</servlet-name>
        <url-pattern>/game/playMove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterToGameServlet</servlet-name>
        <url-pattern>/registerToGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadGameServlet</servlet-name>
        <url-pattern>/uploadGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/usersList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovesListServlet</servlet-name>
        <url-pattern>/game/movesList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameStatusServlet</servlet-name>
        <url-pattern>/game/gameStatus</url-pattern>
    </servlet-mapping>

</web-app>