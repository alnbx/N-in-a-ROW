<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>NinaRow.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameListServlet</servlet-name>
        <servlet-class>NinaRow.servlets.GamesListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>NinaRow.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayerResignServlet</servlet-name>
        <servlet-class>NinaRow.servlets.PlayerResignServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayMoveServlet</servlet-name>
        <servlet-class>NinaRow.servlets.PlayMoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterPlayerToGameServlet</servlet-name>
        <servlet-class>NinaRow.servlets.RegisterPlayerToGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadGameServlet</servlet-name>
        <servlet-class>NinaRow.servlets.UploadGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>NinaRow.servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BoardDataServlet</servlet-name>
        <servlet-class>NinaRow.servlets.BoardDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameDataServlet</servlet-name>
        <servlet-class>NinaRow.servlets.GameDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewerResignServlet</servlet-name>
        <servlet-class>NinaRow.servlets.ViewerResignServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckLogin</servlet-name>
        <servlet-class>NinaRow.servlets.CheckLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetChat</servlet-name>
        <servlet-class>NinaRow.servlets.GetChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendChat</servlet-name>
        <servlet-class>NinaRow.servlets.SendChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginToChat</servlet-name>
        <servlet-class>NinaRow.servlets.LoginToChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetChatUsers</servlet-name>
        <servlet-class>NinaRow.servlets.GetChatUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExitChat</servlet-name>
        <servlet-class>NinaRow.servlets.ExitChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterViewer</servlet-name>
        <servlet-class>NinaRow.servlets.RegisterViewerToGameServlet</servlet-class>
    </servlet>

    <!-- ================================================ -->

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameListServlet</servlet-name>
        <url-pattern>/gamesList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerResignServlet</servlet-name>
        <url-pattern>/game/playerResign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayMoveServlet</servlet-name>
        <url-pattern>/game/playMove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterPlayerToGameServlet</servlet-name>
        <url-pattern>/registerPlayerToGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadGameServlet</servlet-name>
        <url-pattern>/uploadGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/usersList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BoardDataServlet</servlet-name>
        <url-pattern>/game/boardData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameDataServlet</servlet-name>
        <url-pattern>/game/gameData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewerResignServlet</servlet-name>
        <url-pattern>/game/viewerResign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckLogin</servlet-name>
        <url-pattern>/checkLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetChat</servlet-name>
        <url-pattern>/game/getChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendChat</servlet-name>
        <url-pattern>/game/sendChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginToChat</servlet-name>
        <url-pattern>/game/loginToChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetChatUsers</servlet-name>
        <url-pattern>/game/getChatUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExitChat</servlet-name>
        <url-pattern>/game/exitChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterViewer</servlet-name>
        <url-pattern>/registerViewerToGame</url-pattern>
    </servlet-mapping>

</web-app>